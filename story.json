  "slides": [
    {
      "slide_title": "",
      "slide_text": "ApoCaLypse",
      "bg_color": "white",
      "bg_image": "",
      "text_color": "black",
      "text_font": "Times New Roman",
      "text_size": "800%",
      "text_align": "center",
